
<main>
  <p id="notice"></p>
  <div class="container">
   <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
        <h2>Log in</h2>
        <%= form_with model: @user, url: user_session_path do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "name" %>
          </div>
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
          </div>
           <div class="field">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              <span>Remember me</span>
            <% end %>
          </div>
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-sm btn-primary" %>
          </div>
        <% end %>
        <%= link_to "Sign up", "/users/sign_up" %><br>
        <%= link_to "Forgot your password?", "/users/password/new" %>

      </div>
    </div>
  </div>
</main>