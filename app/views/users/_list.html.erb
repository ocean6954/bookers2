


      <div class="col-md-3">
                        <!--User infoスペース-->
        <!--<h4>今ログインしているユーザは<%#= current_user.id %>,<%#= current_user.name %>です</h4>-->
        <h2>User info</h2>

        <table class="table">
          <tbody>
            <tr>
              <% if current_user.profile_image.attached? %>
                <%= image_tag current_user.get_profile_image(100, 100) %>
              <% else %>
                <%= image_tag 'default-image', size: "100x100" %>
              <% end %>
            </tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></span></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></span></th>
            </tr>
          </tbody>
        </table>
        <div class="row">

          <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>

        <!--ここから下は新規投稿フォーム-->

        <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new do |f| %>
          <div class="form-group">
              <%= f.label :Title %><br />
              <%= f.text_field :title, class: "form-control book_title" %>
          </div>
          <div class="form-group">
            <%= f.label :Opinion %><br />
            <%= f.text_area :body, class: "form-control book_body" %>
          </div>
          <div class="form-group">
            <%= f.submit "Create Book", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
